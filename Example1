<!-- ============================= -->
<!-- Crane X7 Parallel Gripper     -->
<!-- Isaac Sim compatible version  -->
<!-- ============================= -->

<!-- Base link of the gripper -->
<link name="gripper_base_link">
  <inertial>
    <mass value="0.1"/>
    <origin xyz="0 0 0"/>
    <inertia ixx="1e-4" iyy="1e-4" izz="1e-4" ixy="0" ixz="0" iyz="0"/>
  </inertial>
  <visual>
    <geometry>
      <box size="0.02 0.02 0.02"/>
    </geometry>
  </visual>
</link>

<!-- Left finger -->
<link name="left_finger_link">
  <inertial>
    <mass value="0.01"/>
    <origin xyz="0 0 0"/>
    <inertia ixx="1e-6" iyy="1e-6" izz="1e-6" ixy="0" ixz="0" iyz="0"/>
  </inertial>
</link>

<!-- Right finger -->
<link name="right_finger_link">
  <inertial>
    <mass value="0.01"/>
    <origin xyz="0 0 0"/>
    <inertia ixx="1e-6" iyy="1e-6" izz="1e-6" ixy="0" ixz="0" iyz="0"/>
  </inertial>
</link>

<!-- Main driving joint -->
<joint name="left_finger_joint" type="prismatic">
  <parent link="gripper_base_link"/>
  <child link="left_finger_link"/>
  <origin xyz="0 0 0" rpy="0 0 0"/>
  <axis xyz="1 0 0"/>
  <limit lower="0.0" upper="0.04" effort="100.0" velocity="0.2"/>
  <dynamics damping="5.0" friction="0.5"/>
</joint>

<!-- Coupled opposite joint -->
<joint name="right_finger_joint" type="prismatic">
  <parent link="gripper_base_link"/>
  <child link="right_finger_link"/>
  <origin xyz="0 0 0" rpy="0 0 0"/>
  <axis xyz="-1 0 0"/>
  <limit lower="0.0" upper="0.04" effort="100.0" velocity="0.2"/>
  <dynamics damping="5.0" friction="0.5"/>
</joint>

<!-- Virtual end-effector center link -->
<link name="gripper_center_link">
  <inertial>
    <mass value="0.001"/>
    <origin xyz="0 0 0"/>
    <inertia ixx="1e-7" iyy="1e-7" izz="1e-7" ixy="0" ixz="0" iyz="0"/>
  </inertial>
</link>

<!-- Fixed joint anchoring center frame -->
<joint name="gripper_center_joint" type="fixed">
  <parent link="gripper_base_link"/>
  <child link="gripper_center_link"/>
  <origin xyz="0 0 0" rpy="0 0 0"/>
</joint>
